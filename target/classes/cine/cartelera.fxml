                        </VBox>
                     </children>
                  </HBox>
                  <StackPane prefHeight="300.0" prefWidth="50.0">
                     <children>
                        <Button fx:id="btnSiguiente" mnemonicParsing="false" onAction="#siguiente" prefHeight="300.0" prefWidth="50.0" text="&gt;">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#continuar" prefHeight="40.0" prefWidth="100.0" text="Continuar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Region prefHeight="100.0" prefWidth="50.0" />
                  <Button mnemonicParsing="false" onAction="#cancelar" prefHeight="40.0" prefWidth="100.0" text="Cancelar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
